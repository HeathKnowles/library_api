{
  "info": {
    "_postman_id": "library-api-smoke-collection",
    "name": "Library API - Smoke",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"smoke_user\",\n  \"password\": \"Password123!\",\n  \"full_name\": \"Smoke Tester\",\n  \"email\": \"smoke@example.com\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/auth/register",
          "host": ["{{baseUrl}}"],
          "path": ["api","v1","auth","register"]
        }
      },
      "response": []
    },
    {
      "name": "Login (get token)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/x-www-form-urlencoded" }
        ],
        "body": {
          "mode": "urlencoded",
          "urlencoded": [
            { "key": "username", "value": "smoke_user", "type": "text" },
            { "key": "password", "value": "Password123!", "type": "text" }
          ]
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["api","v1","auth","login"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var json = pm.response.json();",
              "pm.test('login returned token', function () {",
              "    pm.expect(json).to.have.property('access_token');",
              "});",
              "pm.environment.set('accessToken', json.access_token || '');"
            ]
          }
        }
      ],
      "response": []
    },
    {
      "name": "Create Author",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{accessToken}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Jane Smoke\",\n  \"bio\": \"Author used in smoke tests\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/authors",
          "host": ["{{baseUrl}}"],
          "path": ["api","v1","authors"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var json = pm.response.json();",
              "pm.test('author created', function () { pm.expect(pm.response.code).to.be.oneOf([200,201]); });",
              "pm.environment.set('authorId', json.id || json.author_id || '');"
            ]
          }
        }
      ],
      "response": []
    },
    {
      "name": "List Authors (paginated)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{accessToken}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/v1/authors?page=1&size=10",
          "host": ["{{baseUrl}}"],
          "path": ["api","v1","authors"],
          "query": [
            { "key": "page", "value": "1" },
            { "key": "size", "value": "10" }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Get Author",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{accessToken}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/v1/authors/{{authorId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api","v1","authors","{{authorId}}"]
        }
      },
      "response": []
    },
    {
      "name": "Create Book",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{accessToken}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Smoke Test Book\",\n  \"author_id\": {{authorId}},\n  \"publication_date\": \"2020-01-01\",\n  \"available\": true\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/books",
          "host": ["{{baseUrl}}"],
          "path": ["api","v1","books"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var json = pm.response.json();",
              "pm.test('book created', function () { pm.expect(pm.response.code).to.be.oneOf([200,201]); });",
              "pm.environment.set('bookId', json.id || json.book_id || '');"
            ]
          }
        }
      ],
      "response": []
    },
    {
      "name": "List Books (search/filter)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{accessToken}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/v1/books?search=Smoke&available=true",
          "host": ["{{baseUrl}}"],
          "path": ["api","v1","books"],
          "query": [
            { "key": "search", "value": "Smoke" },
            { "key": "available", "value": "true" }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Get Book",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{accessToken}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/v1/books/{{bookId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api","v1","books","{{bookId}}"]
        }
      },
      "response": []
    },
    {
      "name": "Update Book",
      "request": {
        "method": "PATCH",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{accessToken}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Smoke Test Book - Updated\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/books/{{bookId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api","v1","books","{{bookId}}"]
        }
      },
      "response": []
    },
    {
      "name": "Borrow Book",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{accessToken}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"book_id\": {{bookId}}\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/borrow",
          "host": ["{{baseUrl}}"],
          "path": ["api","v1","borrow"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var json = pm.response.json();",
              "pm.test('borrow record created', function () { pm.expect(pm.response.code).to.be.oneOf([200,201]); });",
              "pm.environment.set('borrowId', json.id || json.record_id || '');"
            ]
          }
        }
      ],
      "response": []
    },
    {
      "name": "Borrow History",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{accessToken}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/v1/borrow/history",
          "host": ["{{baseUrl}}"],
          "path": ["api","v1","borrow","history"]
        }
      },
      "response": []
    },
    {
      "name": "Return Book",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{accessToken}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/v1/return/{{borrowId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api","v1","return","{{borrowId}}"]
        }
      },
      "response": []
    },
    {
      "name": "Delete Book",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{accessToken}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/v1/books/{{bookId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api","v1","books","{{bookId}}"]
        }
      },
      "response": []
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://127.0.0.1:8000" },
    { "key": "accessToken", "value": "" },
    { "key": "authorId", "value": "" },
    { "key": "bookId", "value": "" },
    { "key": "borrowId", "value": "" }
  ]
}